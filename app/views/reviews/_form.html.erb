<h3>Add Review</h3>
<%= form_for([@clip, @clip.reviews.build]) do |f| %>
<p>
  <%= f.label :username %> <br>
  <%= f.text_field(:username, {:class => 'form-control'}) %>
</p>
<p>
  <%= f.label :body %> <br>
  <%= f.text_area(:body, {:class => 'form-control'}) %>
</p>
<p>
  <%= f.submit({:class => 'btn btn-default'}) %>
</p>
<% end %>
